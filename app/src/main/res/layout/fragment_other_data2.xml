<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sadiela.app1.CarapaceData">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:id="@+id/enterHeadDepth"
        android:inputType="numberDecimal"
        android:imeOptions="actionNext"
        android:hint="Head Depth"
        android:background="#b1d1ff"
        android:typeface="sans"
        android:layout_column="1"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:imeOptions="actionNext"
        android:id="@+id/enterHeadWidth"
        android:hint="Head Width"
        android:background="#b1d1ff"
        android:layout_column="1"
        android:layout_above="@+id/enterHeadLength"
        android:layout_alignLeft="@+id/enterHeadLength"
        android:layout_alignStart="@+id/enterHeadLength"
        android:layout_marginBottom="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:imeOptions="actionNext"
        android:id="@+id/enterHeadLength"
        android:hint="Head Length"
        android:background="#b1d1ff"
        android:layout_column="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enterBodyDepth"
        android:imeOptions="actionDone"
        android:hint="Body Depth"
        android:background="#b1d1ff"
        android:layout_column="1"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/saveOthData"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveOther"
        android:id="@+id/saveOthData"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
